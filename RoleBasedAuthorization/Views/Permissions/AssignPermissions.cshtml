@model List<RoleBasedAuthorization.Controllers.PermissionsController.PermissionAssignVM>
@{
    var firstUserId = Model.FirstOrDefault()?.UserId;
}

<h2>Assign Permissions</h2>

@using (Html.BeginForm("AssignPermissions", "Permissions", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Controller</th>
                <th>Action</th>
                <th>HTTP Verb</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                @Html.HiddenFor(m => m[i].UserId)
                @Html.HiddenFor(m => m[i].ControllerName)
                @Html.HiddenFor(m => m[i].ActionName)
                @Html.HiddenFor(m => m[i].HttpVerb)

                <tr>
                    <td>@Model[i].ControllerName</td>
                    <td>@Model[i].ActionName</td>
                    <td>@Model[i].HttpVerb</td>
                    <td>@Html.CheckBoxFor(m => m[i].IsAssigned)</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Save Changes</button>
}

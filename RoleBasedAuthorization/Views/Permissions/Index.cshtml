@model List<RoleBasedAuthorization.Controllers.PermissionsController.UserListVM>

<h2>Users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @Html.ActionLink("Assign Permissions", "AssignPermissions", new { userId = user.UserId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
